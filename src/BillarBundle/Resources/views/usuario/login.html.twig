{% extends 'base.html.twig' %}

{% block body %}

<div class="container">
    <div class="row">
        <div class="col-sm-6 col-md-4 col-md-offset-4">
            <h1 class="text-center login-title"><i class="glyphicon glyphicon-home"></i> </h1>
            <h1 class="text-center login-title">Inicio de Sesion </h1>
            <div class="account-wall">                
                <form class="form-signin" action="{{path("login_check")}}" method="post">
	                <input type="text" id="username" name="_username" class="form-control" placeholder="Login" required autofocus><br>
	                <input type="password" id="password" name="_password" class="form-control" placeholder="Password" required><br>
	                <button class="btn btn-lg btn-primary btn-block" type="submit">
	                    Ingresar
	                </button>
		        	<input type="hidden" name="_target_path" value="/login">
                
                </form>
                {% if error %}
                <div class="alert alert-danger">
				  <strong>Alerta!</strong> No se ha podido inicar sesion con los datos suministrados.
				</div>
                {% endif %}
            </div>            
        </div>
    </div>
</div>

{% endblock %}
